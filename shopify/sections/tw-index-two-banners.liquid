<div class="container mt-1i mb-1i">
  <div class="row justify-content-between flex-wrap flex-lg-nowrap">
    <a class="left-container gtm-mid-banner prevent-children col-12 col-lg-6 mb-1i mb-lg-0" href="{{ section.settings.banner_left_url }}">
      <img class="lazyload w-100" data-src="{{ section.settings.image_left | image_url: width: 712 }}" alt="">
      <div class="two-banner-content w-100 text-center">
        <h3 class="two-banner-content-title font-weight-bold">{{ section.settings.image_left_title }}</h3>
        <div class="two-banner-content-btn">
          <span>{{ section.settings.image_left_btn }}</span>
          <i class="fkt-long-arrow-right"></i>
        </div>
      </div>
    </a>
    <a class="right-container gtm-mid-banner prevent-children col-12 col-lg-6" href="{{ section.settings.banner_right_url }}">
      <img class="lazyload w-100" data-src="{{ section.settings.image_right | image_url: width: 712 }}" alt="">
      <div class="two-banner-content w-100 text-center">
        <h3 class="two-banner-content-title h1 font-weight-bold">{{ section.settings.image_right_title }}</h3>
        <div class="two-banner-content-btn">
          <span>{{ section.settings.image_right_btn }}</span>
          <i class="fkt-long-arrow-right"></i>
        </div>
      </div>
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Index Two Banners",
  "class": "tw-two-banners-container",
  "settings": [
    {
      "type": "header",
      "content": "Two Banner Set"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_left_title",
      "label": "Banner Title"
    },
    {
      "type": "text",
      "id": "image_left_btn",
      "label": "Banner Button Text"
    },
    {
      "type": "url",
      "id": "banner_left_url",
      "label": "Enter a url for the left banner overlay text"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_right_title",
      "label": "Banner Title"
    },
    {
      "type": "text",
      "id": "image_right_btn",
      "label": "Banner Button Text"
    },
    {
      "type": "url",
      "id": "banner_right_url",
      "label": "Enter a url for the right banner overlay text"
    }
  ],
  "presets": [
    {
      "name": "Index Two Banners",
      "category": "Image"
    }
  ]
}
{% endschema %}
