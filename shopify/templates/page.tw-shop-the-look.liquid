<template id="tw-stl-oops-image">
  {{ 'tw-stl-oops.png' | asset_url | img_tag: 'Oops... No results found for this search.', 'tw-stl-oops-image' }}
</template>

<h1 class="is-hide">Shop the look</h1>

<div id="tw-stl-app"></div>
<script>
  function loadScript(src) {
    var script = document.createElement('script');
    script.type = 'text/javascript';
    script.src = src;
    script.defer = true;
    document.body.appendChild(script);
  }
  loadScript("{{ 'swiper.min.js' | asset_url }}");
</script>
