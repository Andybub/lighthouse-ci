<div class="container page-content">
	<div class="row mt-5 mb-7">
		<div class="col-12">
      {% render 'rma-return-form' %}
      <div class="container">
        {{ page.content }}
      </div>
		</div>
	</div>
</div>

<style>
  /* The Modal (background) */
  .modal-return {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 22; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0, 0, 0); /* Fallback color */
    background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
  }

  /* Modal Content */
  #myModal-return .modal-content {
    background-color: #fefefe;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #888;
    width: 50%;
  }

  /* The Close Button */
  #myModal-return .close {
    color: #aaaaaa;
    float: right;
    font-size: 36px;
    font-weight: bold;
    cursor: pointer;
  }

  #myModal-return .close:hover,
  #myModal-return .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }
</style>
<script>
  jQuery('#s-64e5b205-8682-42cc-a6a3-37a0e791c957').click(function () {
    jQuery('#sizing_modal').hide();
    jQuery('#myModal-return').show();
  });
  jQuery('#myModal-return .close').click(function () {
    jQuery('#sizing_modal').hide();
    jQuery('#myModal-return').hide();
  });

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function (event) {
    if (event.target == modal) {
      modal.style.display = 'none';
    }
  };
</script>
