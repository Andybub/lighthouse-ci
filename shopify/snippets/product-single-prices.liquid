{%- liquid
  unless section_id
    assign section_id = section.id
  endunless
-%}
{%- case settings.price_visible -%}
  {%- when "show" -%}{%- assign show = true -%}
  {%- when "show_login" -%}
    {%- if shop.customer_accounts_enabled and customer -%}
      {%- assign show = true -%}
    {%- else -%}
      {%- assign show = false -%}
    {%- endif -%}
{%- endcase -%}
{%- if show -%}
<div class="entry-price price">
  <ins class="ProductPrice-{{section_id}}">
    {{- current_variant.price | money -}}
  </ins>
  <del class="ComparePrice-{{section_id}}{%if current_variant.compare_at_price <= current_variant.price or current_variant.compare_at_price == null%} d-none{%endif%}">
    {{- current_variant.compare_at_price | default: 0 | money -}}
  </del>
  <span class="UnitPrice-{{section_id}} text-nowrap d-sm-inline-block w-auto">
    {%- for tag in product.tags -%}
      {% if tag contains 'Case-' %}{% break %}{% endif %}
      {%-if tag contains 'single-unit-count_' -%}
        {%- assign unit_count = tag | remove: 'single-unit-count_' | times: 1 -%}
        {%- assign single_unit_price = product.price | divided_by: unit_count -%}
        {%- if single_unit_price > 0 -%}
          <div class="per-price">
            (Only {{ single_unit_price | money }} each {{ product.metafields.each.unit_name }})
            </div>
        {%- else -%}
          <script>console.log("Notice: single_unit_price is less than zero")</script>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </span>
  {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
  <div class="product__policies">
    {%- if cart.taxes_included -%}
      {{ 'products.product.include_taxes' | t }}
    {%- endif -%}
    {%- if shop.shipping_policy.body != blank -%}
      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
    {%- endif -%}
  </div>
  {%- endif -%}
</div>
{%- elsif show == false -%}
<a href="{{routes.account_login_url}}" class="entry-price price">{{'products.product.see-price'|t}}</a>
<style type="text/css" media="screen">.entry-buttons .js-item-quantity,.single_add_to_cart_button {display: none !important;}</style>
{%- endif -%}