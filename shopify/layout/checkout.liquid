<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin-when-cross-origin">

    <link rel="dns-prefetch" href="https://cdn.shopify.com">
    <link rel="preconnect" href="https://cdn.shopify.com">

    <title>{{ page_title }}</title>
    
    {{ content_for_header }}
    
    {{ checkout_stylesheets }}
    {{ 'icomoon.css' | asset_url | stylesheet_tag }}
    {{ 'tw-checkout.css' | asset_url | stylesheet_tag }}
    {{ 'jquery-1.12.4.min.js' | asset_url | script_tag }}

    {%- comment -%}{{ checkout_scripts }}{%- endcomment -%}
    {%- render 'tw-checkout-scripts', checkout_scripts: checkout_scripts -%}
    
    {%- render 'tw-checkout-tracking' -%}

  
  {% render 'shogun-head' %}
</head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WQC382F" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {% comment %}{{ breadcrumb }}{% endcomment %}
            {{ breadcrumb | replace_first: ">Information<", ">Address<" | replace_first: ">Shipping<", ">Billing, Payment & Review<" | replace_first: ">Payment<", ">Confirmation<" }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
          <p class="flexible-returns-container" style="display:none">Flexible Returns <span>180 Days</span></p>
          {% render 'tw-checkout-cab' %}
        </aside>
      </div>
    </div>

    {{ tracking_code }}
    
    <!-- BEGIN: Google Customer Reviews by Simprosys InfoMedia for any assistance on this code contact info@simprosys.com -->
    {%- comment -%} /admin/ Settings / Checkout / Order status page / Additional scripts {%- endcomment -%}
    {%- comment -%}<script>
      if (Shopify.Checkout.step && Shopify.Checkout.step == 'thank_you') {
        window.renderOptIn = function() { 
          window.gapi.load('surveyoptin', function() {
            window.gapi.surveyoptin.render(
              {
                "merchant_id": 1552456,
                "order_id": "{{order.order_number}}",
                "email": "{{order.email}}",
                "delivery_country": "{{order.shipping_address.country_code}}",
                "estimated_delivery_date": "{{order.created_at | date: "%s" | minus : -0 | date: "%F" | uri_encode | replace:"+","%20"}}",
                "opt_in_style": "CENTER_DIALOG"
              }); 
          });
        }
        window.___gcfg = {
          lang: "en_US"
        };
      }
    </script>{%- endcomment -%}
    <!-- END: Google Customer Reviews  by Simprosys InfoMedia-->

    {%- if checkout.order -%}
    {%- assign tags = checkout.customer.tags -%}
    {%- unless tags contains "jf-TYPE-BUSINESS" or tags contains "jf-TYPE-RENTAL" or tags contains "jf-TYPE-PLANNER" -%}
    <div id="tw-purchase-survey">
      <div class="purchase-survey-content">
        <button type="button" class="icomoon-close"></button>
        {%- assign mod = checkout.order_number | modulo: 2 -%}
        {%- if mod == 1 -%}
        <script type="text/javascript" src="https://form.jotform.com/jsform/221665995138064?customerId={{ customer.id }}&orderName={{ checkout.order_name }}"></script>
        {%- else -%}
        <script type="text/javascript" src="https://form.jotform.com/jsform/221666144409052?customerId={{ customer.id }}&orderName={{ checkout.order_name }}"></script>
        {%- endif -%}
      </div>
      <script type="text/javascript">
        if (Shopify.Checkout.step && Shopify.Checkout.step == 'thank_you') {
          document.getElementById('tw-purchase-survey').style.display = 'flex';
        }
      </script>
    </div>
    {%- endunless -%}
    {%- endif -%}

    {%- render 'tw-referral-widget' -%}
    <script id="tw-fast-simon-settings-json" type="application/json">
      { 
        "storeID": "{{ settings.fast_simon_store_id }}",
        "uuid": "{{ settings.fast_simon_store_uuid }}",
        "swiperJS": "{{ 'swiper.min.js' | asset_url }}",
        "swiperCSS": "{{ 'swiper-bundle.6.0.4.min.css' | asset_url }}"
      }
    </script>
    <script src="{{ 'tw-vendors.js' | asset_url }}" defer></script>
    <script src="{{ 'tw-checkout.js' | asset_url }}" defer></script>
  </body>
</html>
